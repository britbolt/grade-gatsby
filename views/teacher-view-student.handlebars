 <div class="container">
        <div class="text-center pb-2">{{record.name}}</div>
    <div class="row justify-content-center">
        <div class="col-4 border border-dark p-1 bg-primary text-light">Subject</div>
        <div class="col-2 border border-dark p-1 bg-primary text-light">Grade</div>
    </div>
    {{#each record}}
    <div class="row justify-content-center">
        <div class="subject col-4 border border-dark p-1 d-flex align-items-center">{{record.subject}}</div>
        <div class="col-2 border border-dark p-1 d-flex justify-content-around align-items-center">{{record.grade}}<button class="btn btn-primary">Edit</button></div>
    </div>
    {{/each}}
    <div class="row justify-content-center">
        <button type="button" class="col-6 btn btn-primary m-3">Add a grade</button>
    </div>
    </div>