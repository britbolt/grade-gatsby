<header>
    <div id="intro" class="bg-image">
        <h1 class="banner text-center vh-50 pt-2">Your Students</h1>
    </div>
</header>

<div id="table container" class="text-center">
    <table class="table text-light">
        <thead class="align-items-center">
            <tr class="align-items-center">
                <th class="subject-headers" scope="row" contenteditable="false"></th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Math</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Science</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Music</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Gym</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">English</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {{#each studentData as |student|}}
            <tr class="align-items-center">
                <th scope="row" class="student-name subject-headers" contenteditable="true">{{student.name}}</thead>
                {{#each grades}}
                <td contenteditable="true" id="grades" data-grade={{id}}>{{grade}}</td>
                {{/each}}
                <td>
                    <button class="save-icon btn btn-primary btn-sm" data-student="{{student.id}}" type="submit">
                        <i class="bi bi-save"></i>
                    </button>
                </td>
            </tr>
            {{/each}}
    </tbody>
  </table>
    </div>
    <!-- Button trigger modal -->
<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal">
    Add Student
</button>
<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title">Submit New Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <p>Add new student's name</p>
                <textarea class="form-control" id="student-name-text" rows="3"></textarea>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="d-flex align-items-center flex-column">
   <h2 class="ed-news text-center text-light">Latest in Education News</h2> 
    {{#each news as |article|}}
    <article class="d-flex border border-light rounded">
    <p class="title text-light">{{article.title}}</p>
    <div class="article-flex d-flex align-items-center">
    <img class="article-image me-3" src="{{article.urlToImage}}" alt="article photo">
    <p class="description text-light">{{article.description}}</p>
    </div>
    </article>
    {{/each}}
</div>  
<script src="/javascript/teacher-dashboard.js"></script>