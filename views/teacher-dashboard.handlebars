<header>
    <div id="intro" class="bg-image">
        <h1 class="banner text-center vh-50 pt-2">Your Students</h1>
    </div>
</header>

<div id="table container" class="text-center">
    <table class="table text-light">
        <thead class="align-items-center">
            <tr class="align-items-center">
                <th class="subject-headers" scope="row" contenteditable="false"></th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Math</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Science</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Music</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">Gym</th>
                <th class="subject-headers" scope="col" data-field="subject" contenteditable="true">English</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {{#each studentData as |student|}}
            <tr class="align-items-center">
                <th scope="row" class="student-name subject-headers" contenteditable="true">{{student.name}}</th>
                {{#each grades}}
                <td contenteditable="true">{{grade}}</td>
                {{/each}}
                <td><i class="bi bi-save"></i></td>
            </tr>
            {{/each}}
    </tbody>
  </table>
</div>


<div class="d-flex align-items-center flex-column">
   <h2 class="ed-news text-center text-light">Latest in Education News</h2> 
    {{#each news as |article|}}
    <article class="d-flex border border-light rounded">
    <p class="title text-light">{{article.title}}</p>
    <div class="article-flex d-flex align-items-center">
    <img class="article-image me-3" src="{{article.urlToImage}}" alt="article photo">
    <p class="description text-light">{{article.description}}</p>
    </div>
    </article>
    {{/each}}
</div>  