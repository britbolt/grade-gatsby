<div class="container">
        <form>
        <div class="text-center p-2">David Sanders</div>
        <div class="row justify-content-center">
            <div class="col-4 border border-dark p-1 bg-primary text-light">Subject</div>
            <div class="col-2 border border-dark p-1 bg-primary text-light">Grade</div>
        </div>
        {{#each record as |grade|}}
            {{>subject-row grade}}
        {{/each}}
        <div class="row justify-content-center">
            <select required id="subjects" class="col-4 border border-dark p-1">
                <option value="Science">Science</option>
                <option value="Math">Math</option>
                <option value="History">History</option>
                <option value="English">English</option>
                <option value="Music">Music</option>
            </select>
            <select required id="grades" class="col-2 border border-dark p-1">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="F">F</option>
            </select>
        </div>
        <div class="row justify-content-center">
            <button class="col-3 btn btn-primary m-2"type="submit">Save</button>
        </div>
        </form>
    </div>