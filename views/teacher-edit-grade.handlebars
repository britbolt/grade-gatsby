<div class="container">
    <div class="text-center pb-2">{{record.student}}</div>
    <div class="row justify-content-center">
        <div class="col-4 border border-dark p-1 bg-primary text-light">Subject</div>
        <div class="col-2 border border-dark p-1 bg-primary text-light">Grade</div>
    </div>
    <div class="row justify-content-center">
        <div class="subject col-4 border border-dark p-1 d-flex align-items-center">{{subject}}</div>
        <select required id="grades" class="col-2 border border-dark p-1">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="F">F</option>
        </select>
    </div>
    <div class="row justify-content-center">
        <button type="button" class="col-6 btn btn-primary m-3">Save grade</button>
    </div>
</div>